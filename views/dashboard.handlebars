<section class="flex flex-column justify-evenly">
<h2 class="mx-auto my-6 font-bold text-xl text-textDark text-center">Your Reviews:</h2>
    {{#each reviews as |review|}}
    <div class="max-w-lg p-4 mx-auto mb-6 shadow-md rounded bg-primaryColor text-textLight">
        <div class="space-y-4">
            <div class="space-y-2">
                <a rel="noopener noreferrer" href="/dashboard/edit/{{review.id}}" class="block">
                    <h3 class="text-xl font-semibold text-textLight">{{review.title}}</h3>
                </a>
                <div class="markdown leading-snug text-textLight">{{{parse_markdown review.body}}}</div>
            </div>
        </div>
    </div>
    {{/each}}
</section>