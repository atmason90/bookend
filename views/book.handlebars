<section class="container">
    <div class="container columns-2 flex justify-center p-4">
        <img class="m-4" src="https://via.placeholder.com/600x800" alt="The Book">
        <div class="flex flex-auto flex-col justify-start justify-items-stretch mx-4 my-4">
            <h2 class="h2">{{book.title}}</h2>
            <h3 class="h3">By {{book.author}}</h3>
            <h3 class="h3">{{book.page_count}} pages</h3>
            <p class="grow my-auto">{{book.description}}</p>
        </div>
    </div>
    <div class="container p-4">
        <h2 class="h2">Reviews</h2>
        <div id="reviews">
            <article>
                <h3 class="h3">Best. Book. Ever.</h3>
                <div>
                    <p>This is the best book EVAR!!</p>
                    <div>
                        <h4 class="h4">Comment 1</h4>
                        <p>I agree!</p>
                    </div>
                    <div>
                        <h4 class="h4">Comment 2</h4>
                        <p>I disagree!</p>
                    </div>
                </div>
            </article>
            <article>
                <h3 class="h3">Worst. Book. Ever.</h3>
                <div>
                    <p>This is the worst book EVAR!!</p>
                    <div>
                        <h4 class="h4">Comment 1</h4>
                        <p>I agree!</p>
                    </div>
                    <div>
                        <h4 class="h4">Comment 2</h4>
                        <p>I disagree!</p>
                    </div>
                </div>
            </article>
        </div>
    </div>
</section>
<script src="/js/book.js"></script>